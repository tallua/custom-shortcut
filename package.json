{
	"name": "custom-shortcut",
	"displayName": "custom-shortcut",
	"description": "create your custom shortcuts",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:custom-shortcut.refresh",
		"onCommand:custom-shortcut.open-config",
		"onView:global-shortcuts",
		"onView:local-shortcuts"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title":"Custom Shortcut",
			"properties": {
				"custom-shortcut.globalDirectories" : {
					"type":"array",
					"items": {
						"type":"string",
						"title": "path"
					},
					"default":["~/Favorites"],
					"description": "absoulute pathes you want to track"
				},
				"custom-shortcut.localDirectories" : {
					"type":"string",
					"default":".vscode/shortcuts.json",
					"description": "relative path from your workspace directory"
				}
			}
		},
		"commands": [
			{
				"command": "custom-shortcut.refresh",
				"title": "Custom Shortcut : Refresh"
			},
			{
				"command": "custom-shortcut.open-config",
				"title": "Custom Shortcut : Open Config"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "custom-shortcut",
					"title": "Custom Shortcuts",
					"icon":"./res/dummy.svg"
				}
			]
		},
		"views": {
			"custom-shortcut": [
				{
					"id": "global-shortcuts",
					"name": "Global Shortcuts"
				},
				{
					"id": "local-shortcuts",
					"name": "Local Shortcuts"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
